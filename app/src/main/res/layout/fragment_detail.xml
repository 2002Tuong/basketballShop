<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail_img"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/shoes1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Dame 8"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="@id/thumbnail_img"
            app:layout_constraintTop_toBottomOf="@id/thumbnail_img" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            app:layout_constraintBaseline_toBaselineOf="@id/name_tv"
            app:layout_constraintRight_toRightOf="@id/thumbnail_img"
            app:layout_constraintTop_toBottomOf="@id/thumbnail_img"
            tools:text="$113.00" />

        <TextView
            android:id="@+id/size_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/size"
            app:layout_constraintLeft_toLeftOf="@id/thumbnail_img"
            app:layout_constraintTop_toBottomOf="@id/name_tv" />

        <RadioGroup
            android:id="@+id/size_selection_radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/thumbnail_img"
            app:layout_constraintStart_toStartOf="@id/thumbnail_img"
            app:layout_constraintTop_toBottomOf="@+id/size_label_tv">

            <RadioButton
                android:id="@+id/size_42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:background="@drawable/radio_selector"
                android:button="@color/white"
                android:text="42"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/size_43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:background="@drawable/radio_selector"
                android:button="@color/white"
                android:text="43"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/size_44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:background="@drawable/radio_selector"
                android:button="@color/white"
                android:text="44"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/size_45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:background="@drawable/radio_selector"
                android:button="@color/white"
                android:text="45"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/size_46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:background="@drawable/radio_selector"
                android:button="@color/white"
                android:text="46"
                android:textAlignment="center" />
        </RadioGroup>

        <TextView
            android:id="@+id/description_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/description"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/thumbnail_img"
            app:layout_constraintTop_toBottomOf="@id/size_selection_radio_group" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/expandable_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:src="@drawable/ic_keyboard_arrow_down_24"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/description_label_tv"
            app:layout_constraintTop_toBottomOf="@id/size_selection_radio_group"
            tools:ignore="SpeakableTextPresentCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintBottom_toTopOf="@+id/ar_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_label_tv" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_videocam_24"
            app:layout_constraintBottom_toTopOf="@+id/addBtn"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add_to_cart"
            android:textColor="@color/white"
            app:backgroundTint="@color/red_200"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/thumbnail_img"
            app:layout_constraintRight_toRightOf="@id/thumbnail_img" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
